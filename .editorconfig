# EditorConfig helps developers define and maintain consistent coding styles between different editors and IDEs.
#
# For more information about the properties used in this file, please see the documentation:
# https://editorconfig.org

# This file is the top-most one.
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Go
[*.go]
indent_style = tab
tab_width = 4

# JSON, Markdown, TOML, YAML
[*.{json,md,toml,yaml,yml}]
indent_size = 2

# Web files
[*.{html,css,sass,scss}]
indent_size = 2
